{
  "manifest_version": 3,
  "short_name": "TimeMinder",
  "name": "TimeMinder",
  "description": "TimeMinder minds your time to help make the hours your spend on your browser more honest and productive.",
  "version": "0.1",
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "storage",
    "unlimitedStorage",
    "idle"
  ],
  "icons": { "128": "logo192.png" },
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "static/js/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "logo192.png"
    },
    "default_title": "HubSpot Network Requests",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [ "globe_icon.png"],
      "matches": [ "<all_urls>" ]
  }
  ]
}
